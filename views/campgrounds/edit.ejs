<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

<div class="container">
    <h1 class="text-center mt-4">Edit: <%= campground.name %></h1>
        <div class="form-container mt-4 p-3 bg-secondary text-light border rounded">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="campName" class="font-weight-bolder">Campsite Name</label>
                    <input class="form-control input-sm" type="text" value="<%= campground.name %>" name="camp[name]">
                </div>
                <div class="form-group">    
                    <label for="campName" class="font-weight-bolder">Campsite Image</label>
                    <input class="form-control" type="text" value="<%= campground.image %>" name="camp[image]">
                </div>
                <div class="form-group">    
                    <label for="campDesc" class="font-weight-bolder">Campsite Description</label>
                    <textarea class="form-control" type="text" name="camp[description]" rows="10"><%= campground.description %></textarea>
                </div>
                <div class="form-group">    
                    <label for="campPrice" class="font-weight-bolder">Campsite Price (Per Night)</label>
                    <input id="campPrice" class="form-control" type="number" min="0.01" step="0.01" value="<%= campground.price %>" name="camp[price]">
                </div>
                    <button type="submit" class="btn btn-primary font-weight-bolder">Submit</button>
            </form>
        </div>
</div>
<%- include("../partials/footer") %>