<%- include("partials/header") %>
<%- include("partials/navbar") %>

<div class="container">
    <h1 class="text-center mt-4">Create a New Campground</h1>
        <div class="form-container mt-4 p-3 bg-secondary text-light border rounded">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="campName" class="font-weight-bolder">Campsite Name</label>
                    <input class="form-control input-sm" type="text" placeholder="name" name="newCampInput">
                </div>
                <div class="form-group">    
                    <label for="campDesc" class="font-weight-bolder">Campsite Image</label>
                    <input class="form-control" type="text" placeholder="description" name="newCampDesc">
                </div>
                <div class="form-group">    
                    <label for="campName" class="font-weight-bolder">Campsite Image</label>
                    <input class="form-control" type="text" placeholder="image url" name="newCampImageInput">
                </div>
                    <button type="submit" class="btn btn-primary font-weight-bolder">Submit</button>
            </form>
        </div>
</div>
